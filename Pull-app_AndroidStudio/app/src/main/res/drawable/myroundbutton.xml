<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="10dip" android:color="#895cc5" />
            <gradient android:angle="-90" android:startColor="#895cc5" android:endColor="#895cc5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#895cc5" />
            <solid android:color="#895cc5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="500dip" />
            <stroke android:width="1dip" android:color="#b88cf2" />
            <gradient android:angle="-90" android:startColor="#b88cf2" android:endColor="#b88cf2" />
        </shape>
    </item>
</selector>